{% extends 'base.html.twig' %}

{% block contenido %}
    {% block topic %}{% endblock %}

    <div class="container">
        <div class="form-group">

          <div class="row">
               {{ form_start(edit_form) }}

                  <div class="col-md-10">
                    <div class="panel panel-default">

                    <div class="panel-body">

                      <div class="input-group">
                          {{ form_label(edit_form.fecha) }}
                          {{ form_errors(edit_form.fecha) }}
                          {{ form_widget(edit_form.fecha,{'attr': {'class': ''}}) }}
                     </div>

                     <div class="input-group">
                          {{ form_label(edit_form.titulo) }}
                          {{ form_errors(edit_form.titulo) }}
                          {{ form_widget(edit_form.titulo,{'attr': {'class': 'form-control'}}) }}
                     </div>

                     <div class="input-group">
                          {{ form_label(edit_form.imagen) }}
                          {{ form_errors(edit_form.imagen) }}
                          {{ form_widget(edit_form.imagen,{'attr': {'class': 'form-control'}}) }}
                     </div>

                     <div class="input-group">
                          {{ form_label(edit_form.fuentes) }}
                          {{ form_errors(edit_form.fuentes) }}
                          {{ form_widget(edit_form.fuentes,{'attr': {'class': 'form-control fuentes'}}) }}
                     </div>

                    </div>

                  </div>


                  </div>

                  <div class="col-md-2">

                    <div class="input-group">
                         {{ form_label(edit_form.tags) }}
                         {{ form_errors(edit_form.tags) }}
                         {{ form_widget(edit_form.tags,{ 'attr': {'class': 'selecter_5'} }) }}
                    </div>

                  </div>


          </div>

          <div class="row">
                  <div class="col-md-2">
                    <input class="btn btn-default" type="submit" value="Guardar" />

                    {{ form_end(edit_form) }}
                  </div>

                  <div class="col-md-10">
                      {{ form_start(delete_form) }}
                          <input class="btn btn-danger pull-left" type="submit" value="Delete">
                      {{ form_end(delete_form) }}

                </div>
          </div>

          <div class="row">
              <ul>
                  <li>
                      <a href="{{ path('hecho_index') }}">Volver a la lista</a>
                  </li>

              </ul>
          </div>


        </div>

  </div>
{% endblock %}
